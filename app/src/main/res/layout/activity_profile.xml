<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.codepath.apps.twitterclient.activities.ProfileActivity">
  <com.codepath.apps.TargetLinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/bannerLayout"
      android:orientation="vertical"
      android:gravity="center"
      >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profileImageView"
        android:src="@drawable/profile"
        android:layout_margin="3dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorTextView"
        android:layout_toRightOf="@id/profileImageView"
        android:layout_alignTop="@id/profileImageView"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/black"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTextView"
        android:layout_toRightOf="@id/profileImageView"
        android:layout_below="@id/authorTextView"
        android:layout_alignBottom="@id/profileImageView"
        android:layout_alignParentRight="true"
        android:textColor="@android:color/darker_gray"
        android:layout_centerInParent="true"
        />
  </com.codepath.apps.TargetLinearLayout>
</RelativeLayout>
